#include <iostream> // Подключаем библиотеку для ввода-вывода
#include <cmath>    // Подключаем библиотеку для математических функций
#include <clocale>
// Функция, которая проверяет, находится ли точка (x, y) в заштрихованной области
using namespace std;
bool isInShadedArea(double x, double y) {
    // Определяем центры двух окружностей
    double x1 = 0.0, y1 = 1.0; // Центр первой окружности
    double x2 = 1.0, y2 = 1.0; // Центр второй окружности
    double radius = 1.0;       // Радиусы обеих окружностей одинаковы

    // Проверяем, находится ли точка (x, y) в первой окружности
    bool inFirstCircle = pow(x - x1, 2) + pow(y - y1, 2) <= pow(radius, 2);
    // Проверяем, находится ли точка (x, y) во второй окружности
    bool inSecondCircle = pow(x - x2, 2) + pow(y - y2, 2) <= pow(radius, 2);
    // Проверяем, находится ли точка выше оси x (y должно быть больше или равно 0)
    bool aboveXAxis = y >= 0;

    // Точка считается находящейся в заштрихованной области,
    // если она находится в обеих окружностях и выше оси x
    return inFirstCircle && inSecondCircle && aboveXAxis;
}

int main() {
    setlocale(LC_ALL, "Russian");
    double x, y; // Объявляем переменные для хранения координат точки
    cout << "Введите координаты точки (x и y): "; // Запрашиваем у пользователя ввод координат
    cin >> x >> y; // Считываем введенные координаты

    // Вызываем функцию isInShadedArea и проверяем, находится ли точка в заштрихованной области
    if (isInShadedArea(x, y)) {
        // Если точка в заштрихованной области, выводим сообщение об этом
        cout << "Точка находится в заштрихованной области." << endl;
    }
    else {
        // Если точка не в заштрихованной области, выводим другое сообщение
        cout << "Точка не находится в заштрихованной области." << endl;
    }

    return 0; // Завершаем программу
}

